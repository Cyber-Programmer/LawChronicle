{
  "azure_openai": {
    "azure_endpoint": "https://data-ai-interns.cognitiveservices.azure.com/",
    "azure_api_key": "your-azure-api-key-here",
    "azure_api_version": "2024-11-01-preview",
    "gpt_model": "gpt-4o",
    "max_tokens": 500,
    "temperature": 0.1,
    "timeout": 30,
    "retry_on_failure": true,
    "max_retries": 3
  },
  "classification": {
    "confidence_threshold": 0.7,
    "content_limit": 2000,
    "keyword_extraction_limit": 1500,
    "max_tokens_classification": 500,
    "max_tokens_keyword_extraction": 200
  },
  "scoring": {
    "min_pakistan_score": 0.6,
    "min_constitutional_score": 0.5,
    "ai_classification_weight": 0.8,
    "traditional_scoring_weight": 0.2
  },
  "processing": {
    "batch_size": 10,
    "rate_limit_delay": 1.0,
    "max_retries": 3,
    "enable_batch_processing": true,
    "enable_caching": false,
    "cache_ttl": 3600
  },
  "logging": {
    "log_ai_requests": true,
    "log_token_usage": true,
    "log_response_times": true,
    "log_errors": true
  },
  "security": {
    "mask_api_key_in_logs": true,
    "validate_ssl": true,
    "enable_audit_logging": true
  }
}
